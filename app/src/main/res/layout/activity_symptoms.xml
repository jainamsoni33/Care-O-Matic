<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SymptomsActivity"
    android:orientation="vertical">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp">
        <com.tylersuehr.chips.ChipsInputLayout
            android:id="@+id/chips_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Type in the Symptoms... "
            android:textColorHint="#757575"
            android:textColor="#212121"
            app:chip_showDetails="false"
            app:chip_showAvatar="false"
            app:maxRows="5"/>
    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose commom symptoms"
                android:layout_margin="10dp"
                android:textSize="18dp"/>


            <com.nex3z.flowlayout.FlowLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:flMaxRows="8"
                app:flRowSpacing="8dp">

            <android.support.design.chip.Chip
                android:id="@+id/headacheChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="Headache"
                android:title="headache"
                android:subtitle="headache"
                />
            <android.support.design.chip.Chip
                android:id="@+id/highfeverChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="High Fever"
                android:title="high fever"
                android:subtitle="high_fever"
                />
                <android.support.design.chip.Chip
                    android:id="@+id/vomitingChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:text="Vomiting"
                    android:title="vomiting"
                    android:subtitle="vomiting"/>
                <android.support.design.chip.Chip
                    android:id="@+id/lossofappetiteChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:text="Loss of appetite"
                    android:title="loss of appetite"
                    android:subtitle="loss_of_appetite"/>
                <android.support.design.chip.Chip
                    android:id="@+id/fatigueChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:text="Fatigue"
                    android:title="fatigue"
                    android:subtitle="fatigue"/>
            </com.nex3z.flowlayout.FlowLayout>
        </LinearLayout>
    </android.support.design.card.MaterialCardView>

