    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:textSize="18sp" />

</LinearLayout>